@model IEnumerable<waProyectoEF.Models.Habitacion>

@{
    ViewBag.Title = "listadoHabitaciones";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tablas</h1>
        <div class="mb-4 d-flex">
            <a href="@Url.Action("listadoHabitacionesxEstado", "Habitacion")" class="btn btn-primary me-2">
                Ver Habitaciones por Estado
            </a>
            <a href="@Url.Action("listadoHabitacionesxTipo", "Habitacion")" class="btn btn-primary">
                Ver Habitaciones por Tipo
            </a>
        </div>

        <div class="card mb-4">
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Listado Habitaciones
            </div>
            <div class="card-body">
                <table id="datatablesSimple">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ide_hab)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.num_hab)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_tha)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cap_hab)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.pre_hab)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_est)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ide_hab)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.num_hab)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_tha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cap_hab)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pre_hab)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_est)
                            </td>
                            <td>
                                @Html.ActionLink("Modificar", "actualizaHabitacion", new { id = item.ide_hab }) |
                                <a href="javascript:void(0);" onclick="confirmarEliminacion('@Url.Action("eliminaHabitacion", new { id = item.ide_hab })')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</main>

<script>
    function confirmarEliminacion(url) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "¡No podrás revertir esto!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, eliminarlo!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        })
    }
</script>