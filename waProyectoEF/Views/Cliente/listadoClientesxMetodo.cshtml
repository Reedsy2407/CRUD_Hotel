@model IEnumerable<waProyectoEF.Models.Cliente>

@{
    ViewBag.Title = "listadoClientesxMetodo";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<br />
<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-md-3">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.DropDownList("met", (SelectList)ViewBag.metodos, new { @class = "form-select" })
                    <button class="btn btn-primary" type="submit">BUSCAR</button>
                </div>
            }
        </div>
        <div class="col-md-3">
            <a href="@Url.Action("listadoClientes", "Cliente")" class="btn btn-secondary">
                Volver
            </a>
        </div>
    </div>
</div>

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tablas</h1>
        <div class="card mb-4">
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Filtrar Clientes por Método de Pago
            </div>
            <div class="card-body">
                <table id="datatablesSimple">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ide_cli)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_cli)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_met)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dni_cli)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ide_cli)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_cli)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_met)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dni_cli)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</main>