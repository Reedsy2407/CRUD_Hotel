@model IEnumerable<waProyectoEF.Models.Cliente>

@{
    ViewBag.Title = "listadoClientes";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tablas</h1>
        <div class="mb-4">
            <a href="@Url.Action("listadoClientesxMetodo", "Cliente")" class="btn btn-primary">
                Ver Clientes por Método
            </a>
        </div>
        <div class="card mb-4">
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Listado Clientes
            </div>
            <div class="card-body">
                <table id="datatablesSimple">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ide_cli)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_cli)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nom_met)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dni_cli)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ide_cli)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_cli)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nom_met)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dni_cli)
                            </td>
                            <td>
                                @Html.ActionLink("Modificar", "actualizaCliente", new { id = item.ide_cli }) |
                                <a href="javascript:void(0);" onclick="confirmarEliminacion('@Url.Action("eliminaCliente", new { id = item.ide_cli })')">Eliminar</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</main>

<script>
    // Función confirmarEliminacion
    function confirmarEliminacion(url) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "¡No podrás revertir esto!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, eliminarlo!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    }
</script>
