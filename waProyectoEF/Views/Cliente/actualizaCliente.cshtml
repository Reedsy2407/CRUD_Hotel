@model waProyectoEF.Models.ClienteO

@{
    ViewBag.Title = "actualizaCliente";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Actualizar Cliente</h3></div>
                    <div class="card-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="row mb-3">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.EditorFor(model => model.ide_cli, new { htmlAttributes = new { @class = "form-control" ,@readonly="readonly"} })
                                        @Html.ValidationMessageFor(model => model.ide_cli, "", new { @class = "text-danger" })
                                        <label for="inputFirstName">Código</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.EditorFor(model => model.nom_cli, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nom_cli, "", new { @class = "text-danger" })
                                        <label for="inputFirstName">Nombre</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.EditorFor(model => model.ape_cli, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ape_cli, "", new { @class = "text-danger" })
                                        <label for="inputFirstName">Apellido</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                        <label for="inputFirstName">Email</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.DropDownListFor(model => model.ide_met,(SelectList)ViewBag.metodos,new { @class = "form-control" } )
                                        @Html.ValidationMessageFor(model => model.ide_met, "", new { @class = "text-danger" })
                                        <label for="inputFirstName">Método de pago</label>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.EditorFor(model => model.dni_cli, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.dni_cli, "", new { @class = "text-danger" })
                                        <label for="inputFirstName">DNI</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="mt-4 mb-0">
                                    <div class="d-grid">
                                        <input type="submit" value="Modificar" class="btn btn-primary btn-block" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                 </div>
             </div>
        </div>
    </div>
</main>